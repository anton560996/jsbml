		</dependency>
	</dependencies>
	
	<distributionManagement>	
		<repository>
			<id>jsbmlmavenrepotest.sourceforge.net</id>
			<name>JSBML Maven2 repository</name>
			<url>scp://shell.sourceforge.net/home/project-web/jsbmlmavenrepotest/htdocs/releaseRepository</url>
