<?xml version="1.0" encoding="UTF-8"?>
<project name="jdiff" default="jdiff_report" basedir=".">

<description>
Creating a JDiff report between JSBML 0.8 and 1.0
</description>

<target name="jdiff_report" depends="">

  <!-- This variable is used by the Ant JDiff task. Set it to the
       location where the jdiff package was unpacked -->
  <property name="JDIFF_HOME" value="/home/rodrigue/src/jdiff/jdiff-1.1.1" />

  <taskdef name="jdiff" 
           classname="jdiff.JDiffAntTask" 
           classpath="${JDIFF_HOME}/antjdiff.jar" />
  <jdiff destdir="JSBML_API_changes_0.8_to_1.0" 
         verbose="off"
         stats="on"
         docchanges="off">
    <old name="jsbml-0.8">
      <!-- This is the location of your old source files -->
      <dirset dir="../../../branches/jsbml-0.8/src/" includes="org/**" />
    </old>
    <new name="jsbml-1.0">
      <!-- This is the location of your new source files -->
      <dirset dir="../../core/src/" includes="org/**" />
    </new>
  </jdiff>
</target>

</project>
